<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="20dp"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/statisticIv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        tools:src="@drawable/ic_footsteps"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statisticTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="water drink"
        android:src="@drawable/ic_footsteps"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@id/progressTv"
        app:layout_constraintStart_toEndOf="@id/statisticIv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/progressTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="18/20"
        android:src="@drawable/ic_footsteps"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@id/isCompletedIv"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/isCompletedIv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>