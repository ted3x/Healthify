<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".presentation.auth.sign_in.ui.SignInFragment">

    <ge.c0d3in3.components.edit_text.EditTextWithTitle
        android:id="@+id/oldPasswordEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="100dp"
        app:etHint="@string/sign_in_password_hint"
        app:etInputType="password"
        app:etTitle="@string/old_password"
        app:layout_constraintTop_toTopOf="parent" />

    <ge.c0d3in3.components.edit_text.EditTextWithTitle
        android:id="@+id/confirmOldPasswordEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        app:etHint="@string/sign_in_password_hint"
        app:etInputType="password"
        app:etTitle="@string/confirm_old_password"
        app:layout_constraintTop_toBottomOf="@id/oldPasswordEt" />

    <ge.c0d3in3.components.edit_text.EditTextWithTitle
        android:id="@+id/newPasswordEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        app:etHint="@string/sign_in_password_hint"
        app:etInputType="password"
        app:etTitle="@string/new_password"
        app:layout_constraintTop_toBottomOf="@id/confirmOldPasswordEt" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/changePasswordBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:text="@string/change_password"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>